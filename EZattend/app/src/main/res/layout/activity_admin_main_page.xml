<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMainPage">

    <ImageView
        android:id="@+id/background_admin_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_admin_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title_admin_control_room"
        android:layout_width="313dp"
        android:layout_height="75dp"
        android:layout_marginTop="64dp"
        android:text="Admin Control Room"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_search_school"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_button_adminpage"
        android:padding="20dp"
        android:text="Search School"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/btn_search_teacher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_admin_control_room" />

    <Button
        android:id="@+id/btn_search_teacher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_button_adminpage"
        android:padding="20dp"
        android:text="Search Teacher"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_search_school"
        app:layout_constraintTop_toTopOf="@id/btn_search_school" />

    <Button
        android:id="@+id/btn_search_students"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_button_adminpage"
        android:padding="20dp"
        android:text="Search Students"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/btn_add_teacher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_search_school" />

    <Button
        android:id="@+id/btn_add_teacher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_button_adminpage"
        android:padding="20dp"
        android:text="Add Teacher"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_search_students"
        app:layout_constraintTop_toTopOf="@id/btn_search_students" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_button_adminpage"
        android:padding="20dp"
        android:text="Settings"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_search_students" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="37dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_teacher"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_teacher"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/btn_add_teacher"
        app:layout_constraintTop_toTopOf="@+id/btn_add_teacher"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/add_logo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_search_school"
        app:layout_constraintEnd_toEndOf="@+id/btn_search_school"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_search_school"
        app:layout_constraintTop_toTopOf="@+id/btn_search_school"
        app:srcCompat="@drawable/search_logo" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="32dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_search_students"
        app:layout_constraintEnd_toEndOf="@+id/btn_search_students"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_search_students"
        app:layout_constraintTop_toTopOf="@+id/btn_search_students"
        app:srcCompat="@drawable/search_logo" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="32dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_search_teacher"
        app:layout_constraintEnd_toEndOf="@+id/btn_search_teacher"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_search_teacher"
        app:layout_constraintTop_toTopOf="@+id/btn_search_teacher"
        app:srcCompat="@drawable/search_logo" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_settings"
        app:layout_constraintTop_toTopOf="@+id/btn_settings"
        app:srcCompat="@drawable/settings_logo" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_settings"
        app:layout_constraintTop_toTopOf="@+id/btn_settings"
        app:srcCompat="@drawable/settings_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>